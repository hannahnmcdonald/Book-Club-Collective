    <h1>Register</h1>
<div class = "container">
    <form class="form register-form">
      <div class="form-group">
        <label for="user-user-name">User Name</label>
        <div class="input-group">
          <div class="input-group-prepend">
            {{!-- <div class="input-group-text">
                <i class="fas fa-user"></i>
            </div> --}}
          </div>
          <input
            id="user-user-name"
            name="user-user-name"
            placeholder="Enter User Name"
            type="text"
            class="form-control"
            required="required"
          />
        </div>
      </div>
      <div class="form-group">
        <label for="user-email">Email Address</label>
        <div class="input-group">
          <div class="input-group-prepend">
            {{!-- <div class="input-group-text">
              <i class="fa fa-at"></i>
            </div> --}}
          </div>
          <input
            id="user-email"
            name="user-email"
            placeholder="Enter Email Address"
            type="text"
            class="form-control"
            required="required"
            aria-describedby="user-emailHelpBlock"
          />
        </div>
        <!-- <span id="user-emailHelpBlock" class="form-text text-muted">We won't share
          your email with anyone.</span> -->
      </div>
      <div class="form-group" >
        <label for="user-password">Password</label>
        <div class="input-group">
          <div class="input-group-prepend">
            {{!-- <div class="input-group-text">
              <i class="fa fa-lock"></i>
            </div> --}}
          </div>
          <input
            id="user-password"
            name="user-password"
            placeholder="Enter Password"
            type="text"
            class="form-control"
            required="required"
          />
        </div>
      </div>
      <div class="form-group">
        <label for="user-password-confirm">Password Confirmation</label>
        <div class="input-group">
          <div class="input-group-prepend">
            {{!-- <div class="input-group-text">
              <i class="fa fa-lock"></i>
            </div> --}}
          </div>
          <input
            id="user-password-confirm"
            name="user-password-confirm"
            placeholder="Confirm Password"
            type="text"
            class="form-control"
            required="required"
          />
        </div>
        <div class="form-group">
            <label for="user-faveGenre">Favorite Genre</label>
            <div class="input-group">
              <div class="input-group-prepend">
                {{!-- <div class="input-group-text">
                    <i class="fas fa-bookmark"></i>
                </div> --}}
              </div>
              <input
                id="user-faveGenre"
                name="user-faveGenre"
                placeholder="Enter your favorite genre"
                type="text"
                class="form-control"
                required="required"
              />
            </div>
            <div class="form-group">
                <label for="user-faveBook">Favorite Book</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    {{!-- <div class="input-group-text">
                        <i class="fas fa-book"></i>
                    </div> --}}
                  </div>
                  <input
                    id="user-faveBook"
                    name="user-faveBook"
                    placeholder="Enter your favorite book"
                    type="text"
                    class="form-control"
                    required="required"
                  />
                </div>
                <div class="form-group">
                    <label for="user-faveQuote">Favorite Quote</label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        {{!-- <div class="input-group-text">
                            <i class="fas fa-quote-right"></i>
                        </div> --}}
                      </div>
                      <input
                        id="user-faveQuote"
                        name="user-faveQuote"
                        placeholder="Enter your favorite quote"
                        type="text"
                        class="form-control"
                        required="required"
                      />
                    </div>
      </div>
      <div class="form-group">
        <button name="submit" type="submit" class="btn btn-primary reg-btn">Submit</button>
      </div>
    </form>
</div>

<script src="./js/register.js"></script>
